#!/usr/bin/env python3.5
import matplotlib.pyplot as pypl
import numpy as np
import math as m
from scipy.integrate import quad
from matplotlib import rc
from mpl_toolkits.mplot3d import Axes3D
from pylab import*
from sympy import*

data = np.loadtxt("output.dat")
title = np.loadtxt("details.dat",str)
ID = np.loadtxt("ID.dat")

if ID == -1:
    x = data[1:,0]
    y = data[1:,1]
    z = data[1:,2]
    w = data[1:,3]

    pypl.plot(x,y,z,w)
    pypl.xlabel(title[0])
    pypl.ylabel(title[1])

elif ID == 1:
    x = data[1:,0]
    y = data[1:,1]

    pypl.plot(x,y)

elif ID == 2:
    x = data[1:,0]
    y = data[1:,1]

    pypl.loglog(x,y)

elif ID == 3:
    x = data[1:,0]
    y = data[1:,1]
    z = data[1:,2]

    fig = pypl.figure()
    ax = fig.add_subplot(111, projection='3d')
    ax.plot(x,y,z)
    
    
else:
    print("ERROR")

pypl.grid()
pypl.show()
