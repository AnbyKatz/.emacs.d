#!/usr/local/bin/julia
using PyPlot
using Plots

pyplot()

data=readdlm("BBChaos145Hz-1.txt");
N=2^16;

driving_freq=data[range(1,N-1),1];
ball_height=data[range(1,N-1),2];

fourier_driver=fft(driving_freq);
fourier_height=fft(ball_height);

drive_power=(abs.(fourier_driver)).^2/N^2;
ball_power=(abs.(fourier_height)).^2;

i=findfirst(drive_power,maximum(drive_power));
scale=145/i;
x=scale*range(-N/2,N/2-1,N-1);

loglog(x,ball_power)
xlabel("frequency")
ylabel("Power Spectra")
show()

