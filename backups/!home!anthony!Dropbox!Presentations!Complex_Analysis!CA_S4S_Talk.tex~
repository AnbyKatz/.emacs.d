\begin{frame}[label={sec:org41e9054}]{Cauchy's Integral Formula}
\begin{theorem}[Cauchy's Integral Formula]
  Suppose $f:U\subseteq \mathbb{C}\to\mathbb{C}$ is a holomorphic and $U$ an open subset. Then for the open ball $B(a,R)\subseteq U$ we have that
  \begin{align*}
    f(a) = \frac{1}{2\pi i}\int_{\pd B(a,R)}  \frac{f(z)}{z-a}\dd z
  \end{align*}
\end{theorem}
\end{frame}

\begin{frame}[label={sec:org97b10f4}]{Examples}
