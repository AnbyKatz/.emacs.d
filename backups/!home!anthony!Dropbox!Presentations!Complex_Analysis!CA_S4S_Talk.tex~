\section{Complex Differentiation}
\label{sec:org29aeef1}

\begin{frame}[label={sec:orgedf2689}]{Balls}
\begin{definition}
  If $a\inC$ and $R\inR$ then the Ball of radius $R$ is defined as the set
  \begin{align*}
    B(a,R) &\equiv \{ \ z \ | \ 0\leq\abs{z-a}<R \}\\
    \pd B(a,R) &\equiv \{ \ z \ | \ \abs{z-a}=R \} \\
    \pd B(a,R) &\equiv B(a,R)\cup \pd B(a,r)
  \end{align*}
\end{definition}
\end{frame}

\begin{frame}[label={sec:org34037f0}]{The Derivative}
\begin{definition}
  Take a complex valued function $f$ defined on a nhd of the point $z_0$ i.e. $B(z_0,R)$. The complex derivative defined as
  \begin{align*}
    f'(z_0) = \lim_{z\to z_0}\frac{f(z)-f(z_0)}{z-z_0}
  \end{align*}
  $f$ is said to be holomorphic (complex differentiable) in a nhd of $z_0$ if the above limit exists.  
\end{definition}
\end{frame}

