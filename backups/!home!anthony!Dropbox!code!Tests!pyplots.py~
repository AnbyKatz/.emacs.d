#!/usr/bin/env python3.5
import matplotlib.pyplot as pypl
import numpy as np
import math as m
from scipy.integrate import quad
from matplotlib import rc
from mpl_toolkits.mplot3d import Axes3D
from pylab import*
from sympy import*

data = np.loadtxt("output.dat")
ID = np.loadtxt("ID.dat")
N = len(data)

if ID == 1:
    x = data[0:int(N/2-1)]
    y = data[int(N/2):N-1]

    pypl.plot(x,y)

elif ID == 2:
    x = data[0:int(N/2-1)]
    y = data[int(N/2):N-1]

    pypl.loglog(x,y)

elif ID == 3:
    x = data[0:int(N/3-1)]
    y = data[int(N/3):2*int(N/3)-1]
    z = data[2*int(N/3):N-1]
    
    fig = pypl.figure()
    ax = fig.add_subplot(111, projection='3d')
    ax.plot(x,y,z)
    
else:
    print("ERROR")

pypl.grid()
pypl.show()
