module lp
  use kinds
  implicit none

contains

  function linspace(start,finish,N) result(v)
    integer, intent(in)    :: start, finish
    integer                :: N
    real(dp), dimension(N) :: v
    
    real(dp)               :: int
    integer                :: i
    
    v(1) = start
    v(N) = finish
    int  = finish/N 

    do i=2,N-1
       v(i)=v(i-1)+int
    end do

  end function linspace
    


end module lp
