# Fortran base MakeFile

F90C = ifort
F90FLAGS = -O2

%.o: %.f90
	$(F90C) $(F90FLAGS) -c $<

OBJS = 	kinds.o \
	MatrixFunctions.o


test: test.f90 $(OBJS)
	$(F90C) $(F90FLAGS) -o $@ $< $(OBJS) 

test.o: kinds.o
MatrixFunctions.o: kinds.o

clean:
	rm *.o *.mod

