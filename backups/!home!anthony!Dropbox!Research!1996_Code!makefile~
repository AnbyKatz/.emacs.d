# Fortran base MakeFile
# add links to libaries if needed

F90C = ifort
F90FLAGS = -O2

%.o: %.f90
	$(F90C) $(F90FLAGS) -c $<

# Modules below
OBJS = kinds.o\
	UsefulFunctions.o\
	nrutil.o\
	pyplots.o\
	quadpack.o

all: 1996_Code

1996_Code: 1996_Code.f90 $(OBJS)
	$(F90C) $(F90FLAGS) -o $@ $< $(OBJS) 

# list dependencies
1996_Code.o: kinds.o quadpack.o nrutil.o pyplots.o UsefulFunctions.o 

UsefulFunctions.o : kinds.o nrutil.o quadpack.o
nrutil.o: kinds.o
pyplots.o: kinds.o
quadpack.o: kinds.o

clean:
	rm *.o *.mod

