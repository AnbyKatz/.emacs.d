# Fortran base MakeFile
# add links to libaries if needed

F90C = ifort
F90FLAGS = -O2

%.o: %.f90
	$(F90C) $(F90FLAGS) -c $<

# Modules below
OBJS = 	kinds.o \
	fft_mod.o

test: test.f90 $(OBJS)
	$(F90C) $(F90FLAGS) -o $@ $< $(OBJS) 

# list dependencies
test.o: kinds.o
fft_mod.o: kinds.o

clean:
	rm *.o *.mod

